# UAT Environment Configuration
ENVIRONMENT=uat
DEBUG=false
LOG_LEVEL=WARN

# Application Settings
APP_NAME=Collatz Data Science - UAT
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8080

# Database Configuration
DB_HOST=uat-db-host
DB_PORT=5432
DB_NAME=collatz_db_uat
DB_USER=postgresql
DB_PASSWORD=uat_database_password_here
DB_URL=postgresql://postgresql:uat_database_password_here@uat-db-host:5432/collatz_db_uat

# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=uat_jupyter_token
JUPYTER_PASSWORD=uat_jupyter_password

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
REPORTS_PATH=./reports
NOTEBOOKS_PATH=./notebooks

# Computation Settings
MAX_WORKERS=6
CACHE_ENABLED=true
BATCH_SIZE=2000
MAX_ITERATIONS=1000000

# API Keys (UAT environment)
# OPENAI_API_KEY=uat_openai_api_key_here
# WANDB_API_KEY=uat_wandb_api_key_here
# NEPTUNE_API_TOKEN=uat_neptune_api_token_here

# Security
SECRET_KEY=uat_secret_key_change_in_production
ALLOWED_HOSTS=uat.collatz.example.com,localhost,127.0.0.1

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Python Configuration
PYTHONPATH=/app/src

# UAT Specific Settings
PRODUCTION_LIKE_DATA=true
MOCK_EXTERNAL_APIS=false
PERFORMANCE_MONITORING=true
LOAD_TESTING_ENABLED=true
USER_ACCEPTANCE_TESTING=true
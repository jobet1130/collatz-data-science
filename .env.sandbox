# Sandbox Environment Configuration
ENVIRONMENT=sandbox
DEBUG=true
LOG_LEVEL=DEBUG

# Application Settings
APP_NAME=Collatz Data Science - Sandbox
APP_VERSION=1.0.0-sandbox
APP_HOST=0.0.0.0
APP_PORT=8080

# Database Configuration
DB_HOST=sandbox-db-host
DB_PORT=5432
DB_NAME=collatz_db_sandbox
DB_USER=postgresql
DB_PASSWORD=sandbox_database_password_here
DB_URL=postgresql://postgresql:sandbox_database_password_here@sandbox-db-host:5432/collatz_db_sandbox

# Jupyter Configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=sandbox_jupyter_token
JUPYTER_PASSWORD=sandbox_jupyter_password

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
REPORTS_PATH=./reports
NOTEBOOKS_PATH=./notebooks

# Computation Settings
MAX_WORKERS=2
CACHE_ENABLED=false
BATCH_SIZE=500
MAX_ITERATIONS=100000

# API Keys (Sandbox environment - use test/mock keys)
# OPENAI_API_KEY=sandbox_openai_api_key_here
# WANDB_API_KEY=sandbox_wandb_api_key_here
# NEPTUNE_API_TOKEN=sandbox_neptune_api_token_here

# Security
SECRET_KEY=sandbox_secret_key_for_testing_only
ALLOWED_HOSTS=sandbox.collatz.example.com,localhost,127.0.0.1,0.0.0.0

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Python Configuration
PYTHONPATH=/app/src

# Sandbox Specific Settings
EXPERIMENTAL_FEATURES=true
MOCK_ALL_EXTERNAL_APIS=true
FAST_TESTING_MODE=true
SAMPLE_DATA_ONLY=true
DEBUG_PROFILING=true
AUTO_RELOAD=true
HOT_RELOAD=true
VERBOSE_LOGGING=true
TEST_DATA_GENERATION=true